---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/sections/common/Contact.astro';

const seoConfig = {
  title: "Contactez-nous | SMICE",
  description: "Prenez contact avec notre équipe. Nous sommes à votre écoute pour répondre à vos questions et besoins.",
  keywords: ["SMICE", "contact", "nous contacter", "rendez-vous", "demande"],
};
---

<Layout 
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
>
  <Navbar currentPath="/contact-us" />
  
  <main class="contact-page">
    <Contact decorationColor="#3D4A7A" />
  </main>
  
  <Footer />
</Layout>

<style>
  .contact-page {
    padding-top: 80px;
  }

  .contact-page :global(.contact-section) {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
  }
</style>
