---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import SecteursHero from '../../components/sections/secteurs/SecteursHero.astro';
import Testimonials from '../../components/sections/common/Testimonials.astro';
import Experience from '../../components/sections/common/Experience.astro';
import BenefitsSection from '../../components/sections/secteurs/BenefitsSection.astro';
import FeaturesSection from '../../components/sections/secteurs/FeaturesSection.astro';
import FAQSection from '../../components/sections/common/FAQSection.astro';
import Contact from '../../components/sections/common/Contact.astro';

const seoConfig = {
  title: "Secteur Loisirs | SMICE",
  description: "Enchantez vos visiteurs dans vos espaces de loisirs. Le partenaire qualité qui mesure et optimise l'expérience visiteur pour fidéliser votre clientèle.",
  keywords: ["SMICE", "loisirs", "parc d'attractions", "culture", "mystery shopping", "qualité"],
};

// Loisirs testimonials
const loisirsTestimonials = [
  {
    id: 1,
    quote: "Grâce à Smice, nous avons une vision claire de l'expérience vécue par nos visiteurs. Les audits nous permettent d'optimiser chaque attraction et chaque point de contact.",
    name: "Laurent Mercier",
    company: "Directeur Qualité, ParcoMagique",
    avatar: "/images/testimonials/laurent-mercier.png",
    nameColor: "#4A5FC1"
  },
  {
    id: 2,
    quote: "La plateforme Smice nous offre un suivi en temps réel de nos indicateurs qualité. Nos équipes sont plus engagées et nos visiteurs reviennent plus souvent.",
    name: "Sandrine Legrand",
    company: "Responsable Expérience Visiteur, CultureSpace",
    avatar: "/images/testimonials/sandrine-legrand.png",
    nameColor: "#9B7BC7"
  },
  {
    id: 3,
    quote: "Smice nous a aidés à standardiser l'expérience visiteur sur l'ensemble de nos sites. Un partenaire indispensable pour notre excellence opérationnelle.",
    name: "Vincent Dubois",
    company: "Manager Réseau, FunPark Group",
    avatar: "/images/testimonials/vincent-dubois.png",
    nameColor: "#C9A227"
  }
];

// Platform features for loisirs
const loisirsFeatures = [
  {
    tag: "PLAN D'ACTIONS",
    title: "Lancez des actions concrètes pour améliorer le respect de vos standards qualité.",
    image: "/images/platform/plan-actions.png",
    imageAlt: "Plan d'actions"
  },
  {
    tag: "VERBATIMS",
    title: "Obtenez des retours d'expériences visiteurs.",
    image: "/images/platform/verbatims.png",
    imageAlt: "Verbatims"
  },
  {
    tag: "MUR D'IMAGES",
    title: "Vos points améliorables, en images.",
    image: "/images/platform/image-wall.png",
    imageAlt: "Mur d'images"
  }
];

// Loisirs-specific services
const loisirsServices = [
  {
    title: "Vos process opérationnels",
    subtitle: "Analysez la qualité de service à chaque étape de la visite.",
    image: "/images/services/loisirs-process.png",
    description: "Évaluez la rigueur de vos process, de l'accueil à la sortie. Smice analyse billetterie, files d'attente, propreté, sécurité et qualité des animations pour une vision complète de votre performance opérationnelle.",
    buttonText: "En savoir plus",
    buttonStyle: "light" as const,
    href: "/services#process"
  },
  {
    title: "Vos clients mystères",
    subtitle: "Découvrez ce que vos visiteurs vivent vraiment.",
    image: "/images/services/loisirs-mystery.png",
    description: "Nos Smiceurs visitent vos sites comme de vrais visiteurs : accueil, attractions, restauration, boutiques. Vous accédez à la réalité terrain telle qu'elle est vécue par votre public.",
    buttonText: "En savoir plus",
    buttonStyle: "primary" as const,
    href: "/services#mystery"
  },
  {
    title: "Vos collaborateurs",
    subtitle: "Impliquez vos équipes dans la démarche qualité.",
    image: "/images/services/loisirs-collaborators.png",
    description: "Avec les auto-évaluations et les feedbacks immédiats, vos équipes gagnent en rigueur et en sens de l'accueil. Les résultats deviennent un outil de coaching opérationnel au quotidien.",
    buttonText: "En savoir plus",
    buttonStyle: "secondary" as const,
    href: "/services#collaborators"
  }
];
---

<Layout 
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
>
  <Navbar currentPath="/secteurs" backgroundColor="#F0F7F6" />
  
  <main>
    <SecteursHero sector="loisirs" />
    <Experience 
      title="La qualité de vos espaces de loisirs, mesurée à "
      titleHighlight="chaque étape"
      subtitle="Smice accompagne parcs d'attractions, musées et sites culturels dans le pilotage de leur excellence opérationnelle et garantit une qualité homogène sur l'ensemble des espaces."
      services={loisirsServices}
      backgroundColor="white"
    />
    <BenefitsSection 
      benefits={[
        {
          title: "Des standards maîtrisés, de l'entrée à la sortie",
          highlights: ["standards", "sortie"],
          sectionTitle: "Pour vos standards :",
          paragraphs: [
            "Smice vous aide à garantir une expérience visiteur parfaitement cohérente, de l'achat du billet jusqu'à la sortie du site. Nos évaluations mesurent la qualité de l'accueil, la gestion des files d'attente, la propreté et la sécurité.",
            "Vous obtenez une vision complète et structurée de la maîtrise de vos standards, à chaque étape du parcours visiteur."
          ],
          buttonText: "En savoir plus",
          buttonHref: "/services",
          image: "/images/sectors/loisirs-parc.png",
          imageAlt: "Parc de loisirs",
          backgroundColor: "#F0F7F6",
          imageOnLeft: true
        },
        {
          title: "Pour vos visiteurs, chaque moment compte",
          highlights: ["visiteurs", "moment"],
          sectionTitle: "Pour vos visiteurs :",
          paragraphs: [
            "Les visites mystère Smice vous révèlent vos sites tels qu'ils sont réellement vécus : accueil, attractions, restauration, boutiques et interactions avec vos équipes.",
            "Le regard objectif de nos Smiceurs met en lumière ce qui enchante — et les irritants qui gâchent l'expérience.",
            "Vous obtenez une vision authentique de l'expérience visiteur pour garantir des moments mémorables."
          ],
          buttonText: "En savoir plus",
          buttonHref: "/services",
          image: "/images/sectors/loisirs-visiteurs.png",
          imageAlt: "Visiteurs en parc de loisirs",
          backgroundColor: "#F4F7FF",
          imageOnLeft: false
        },
        {
          title: "Un outil d'engagement et de progression",
          highlights: ["engagement", "progression"],
          sectionTitle: "Pour vos équipes :",
          paragraphs: [
            "Smice leur offre un cadre simple et motivant pour progresser chaque jour. Les auto-évaluations régulières renforcent la rigueur, les feedbacks immédiats améliorent la relation visiteur.",
            "Vos collaborateurs gagnent en autonomie et en sens de l'accueil — au bénéfice direct de l'expérience visiteur."
          ],
          buttonText: "En savoir plus",
          buttonHref: "/services",
          image: "/images/sectors/loisirs-team.png",
          imageAlt: "Équipe loisirs",
          backgroundColor: "#F3EFF6",
          imageOnLeft: true
        }
      ]}
    />
    <Testimonials 
      title="Ils ont décidé de nous faire "
      titleHighlight="confiance"
      subtitle="Ces professionnels des loisirs améliorent l'expérience visiteur main dans la main avec Smice, et voici leurs retours."
      testimonials={loisirsTestimonials}
      backgroundColor="#F0F7F6"
    />
    <FeaturesSection 
      title="Une "
      titleHighlight="plateforme"
      platformImage="/images/platform/dashboard.png"
      subtitle="Des "
      subtitleHighlight1="fonctionnalités"
      subtitleHighlight2="loisirs"
      features={loisirsFeatures}
      backgroundColor="white"
      mobileAppTitle="Une application mobile pour former vos "
      mobileAppHighlight="collaborateurs"
      mobileAppImage="/images/platform/mobile-app.png"
      mobileAppParagraphs={[
        "Depuis près de vingt ans, Smice aide les acteurs des loisirs à structurer leur qualité et à professionnaliser leurs équipes grâce à une expertise terrain solide.",
        "Notre application mobile guide chaque contrôle et facilite l'intégration des bons gestes, tandis que la plateforme d'analyse donne aux managers une visibilité immédiate sur les résultats.",
        "Avec une communauté de Smiceurs formés, Smice assure une montée en compétence continue pour renforcer l'excellence opérationnelle."
      ]}
    />
    <FAQSection 
      backgroundColor="#F5F7FA"
      faqItems={[
        {
          question: "Comment garantir la même qualité sur tous vos sites ?",
          answer: "Grâce aux visites mystère, aux audits et à l'auto-évaluation, Smice vous donne une vision homogène de chaque site. Les standards sont mesurés de la même façon partout, avec preuves visuelles et scores comparatifs.",
          defaultOpen: false
        },
        {
          question: "Comment améliorer l'expérience visiteur en continu ?",
          answer: "L'auto-évaluation transforme chaque contrôle en outil de formation. Les équipes apprennent en faisant et montent en compétence sans attendre une formation formelle.",
          defaultOpen: false
        },
        {
          question: "Comment mesurer la satisfaction visiteur objectivement ?",
          answer: "Entre auto-évaluation, audits opérationnels et visites mystère, vous combinez perception, conformité et exécution. Une triple lecture indispensable pour garantir une qualité réellement maîtrisée.",
          defaultOpen: false
        },
        {
          question: "Comment obtenir une vision terrain fiable sur l'ensemble de vos espaces ?",
          answer: "La communauté de Smiceurs intervient sur site, à visage découvert ou en visiteur mystère. Leur regard extérieur vous offre une lecture indépendante et objective.",
          defaultOpen: false
        }
      ]}
    />
    <Contact decorationColor="#75898A" />
  </main>
  
  <Footer />
</Layout>
