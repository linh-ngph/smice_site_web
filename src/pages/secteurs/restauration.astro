---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import SecteursHero from '../../components/sections/secteurs/SecteursHero.astro';
import Testimonials from '../../components/sections/common/Testimonials.astro';
import Experience from '../../components/sections/common/Experience.astro';
import BenefitsSection from '../../components/sections/secteurs/BenefitsSection.astro';
import FeaturesSection from '../../components/sections/secteurs/FeaturesSection.astro';
import FAQSection from '../../components/sections/common/FAQSection.astro';
import Contact from '../../components/sections/common/Contact.astro';

const seoConfig = {
  title: "Secteur Restauration | SMICE",
  description: "Maîtrisez l'expérience client dans vos restaurants. Le partenaire qualité qui transforme vos standards opérationnels en performances mesurables.",
  keywords: ["SMICE", "restauration", "restaurant", "mystery shopping", "qualité"],
};

// Restauration testimonials
const restaurationTestimonials = [
  {
    id: 1,
    quote: "Grâce à Smice, nous avons pu identifier des opportunités d'amélioration précises dans nos restaurants. La plateforme nous permet de suivre en temps réel la qualité de service et d'agir rapidement.",
    name: "Claire Morel",
    company: "Directrice Expérience Client, Bistro Lyonnais",
    avatar: "/images/testimonials/claire-morel.png",
    nameColor: "#4A5FC1"
  },
  {
    id: 2,
    quote: "Les audits mystères Smice ont transformé notre approche qualité. Nos équipes sont plus engagées et nos standards n'ont jamais été aussi bien respectés sur l'ensemble de nos établissements.",
    name: "Romain Lefèvre",
    company: "Responsable Qualité, La Table Française",
    avatar: "/images/testimonials/romain-lefevre.png",
    nameColor: "#9B7BC7"
  },
  {
    id: 3,
    quote: "Smice nous offre une vision objective de l'expérience vécue par nos clients. C'est devenu un outil indispensable pour piloter la qualité de notre réseau de brasseries.",
    name: "Sophie Bernard",
    company: "Manager de réseau, Brasserie du Marché",
    avatar: "/images/testimonials/sophie-bernard.png",
    nameColor: "#C9A227"
  }
];

// Platform features for restauration
const restaurationFeatures = [
  {
    tag: "PLAN D'ACTIONS",
    title: "Lancez des actions concrètes pour améliorer le respect de votre référentiel qualité.",
    image: "/images/platform/plan-actions.png",
    imageAlt: "Plan d'actions"
  },
  {
    tag: "VERBATIMS",
    title: "Obtenez des retours d'expériences.",
    image: "/images/platform/verbatims.png",
    imageAlt: "Verbatims"
  },
  {
    tag: "MUR D'IMAGES",
    title: "Vos points améliorables, en images.",
    image: "/images/platform/image-wall.png",
    imageAlt: "Mur d'images"
  }
];

// Restauration-specific services
const restaurationServices = [
  {
    title: "Vos process opérationnels",
    subtitle: "Analysez la qualité de service à la source.",
    image: "/images/services/restaurant-process.png",
    description: "Plongez au cœur de l'exécution réelle de votre restauration. Smice évalue la rigueur de vos process, de la cuisine au service, en analysant hygiène, coordination et fluidité entre commande et livraison. Vous obtenez une vision claire, factuelle et directement exploitable de votre performance opérationnelle.",
    buttonText: "En savoir plus",
    buttonStyle: "light" as const,
    href: "/services#process"
  },
  {
    title: "Vos clients mystères",
    subtitle: "Découvrez ce que vos clients vivent vraiment.",
    image: "/images/services/restaurant-mystery.png",
    description: "Obtenez une vision fidèle de ce que vivent vos clients. Nos Smiceurs évaluent votre restaurant comme de vrais convives : accueil, rythme du service, émotions, qualité perçue, ambiance et irritants. Vous accédez enfin à la réalité du terrain telle qu'elle est vécue, et non telle qu'on l'imagine.",
    buttonText: "En savoir plus",
    buttonStyle: "primary" as const,
    href: "/services#mystery"
  },
  {
    title: "Vos collaborateurs",
    subtitle: "Impliquez vos équipes dans la démarche qualité.",
    image: "/images/services/restaurant-collaborators.png",
    description: "Faites de vos équipes les acteurs de votre qualité. Avec les auto-évaluations, les feedbacks immédiats et les outils Smice, vos collaborateurs gagnent en précision, cohérence et engagement. Les résultats deviennent un outil concret de coaching opérationnel, service après service.",
    buttonText: "En savoir plus",
    buttonStyle: "secondary" as const,
    href: "/services#collaborators"
  }
];
---

<Layout 
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
>
  <Navbar currentPath="/secteurs" backgroundColor="#F0F7F6" />
  
  <main>
    <SecteursHero sector="restauration" />
    <Experience 
      title="La qualité de votre restaurant, mesurée à "
      titleHighlight="chaque étape"
      subtitle="Smice accompagne restaurants, chaînes et franchises dans le pilotage de leur excellence opérationnelle et garantit une qualité homogène quel que soit le service, le site ou l'équipe."
      services={restaurationServices}
      backgroundColor="white"
    />
    <BenefitsSection 
      benefits={[
        {
          title: "Des process maîtrisés, du service à la salle",
          highlights: ["process", "service"],
          sectionTitle: "Pour vos standards :",
          paragraphs: [
            "Smice vous aide à garantir une expérience client parfaitement cohérente, de la préparation en cuisine jusqu'à l'accueil des convives. Nos évaluations mesurent la qualité d'organisation, la propreté et la rigueur d'exécution, tout en vérifiant le respect des protocoles d'hygiène et de sécurité. Elles analysent aussi la fluidité du service, la capacité des équipes à valoriser l'offre et la qualité visuelle des plats présentés.",
            "Vous obtenez une vision complète et structurée de la maîtrise de vos standards, à chaque étape du parcours client."
          ],
          buttonText: "En savoir plus",
          buttonHref: "/services",
          image: "/images/sectors/restaurant-table.png",
          imageAlt: "Table de restaurant",
          backgroundColor: "#F0F7F6",
          imageOnLeft: true
        },
        {
          title: "Pour vos clients, chaque détail compte:",
          highlights: ["vos clients", "détail"],
          sectionTitle: "Pour vos clients :",
          paragraphs: [
            "Les visites mystère Smice vous révèlent votre restaurant tel qu'il est réellement vécu : accueil, attente, qualité perçue des plats, fluidité du service, ambiance et attention portée au client.",
            "Le regard objectif de nos Smiceurs met en lumière ce qui fonctionne — et les frictions que vos équipes ne voient plus.",
            "Vous obtenez une vision authentique, précise et immédiatement actionnable de l'expérience client, pour garantir un service sans compromis à chaque visite."
          ],
          buttonText: "En savoir plus",
          buttonHref: "/services",
          image: "/images/sectors/restaurant-preparation.png",
          imageAlt: "Préparation en cuisine",
          backgroundColor: "#F4F7FF",
          imageOnLeft: false
        }
      ]}
    />
    <Testimonials 
      title="Ils ont décidé de nous faire "
      titleHighlight="confiance"
      subtitle="Ces restaurateurs améliorent l'expérience client de leurs enseignes main dans la main avec Smice, et voici leurs retours."
      testimonials={restaurationTestimonials}
      backgroundColor="#F0F7F6"
    />
    <FeaturesSection 
      title="Une "
      titleHighlight="plateforme"
      platformImage="/images/platform/dashboard.png"
      subtitle="Des "
      subtitleHighlight1="fonctionnalités"
      subtitleHighlight2="restauration"
      features={restaurationFeatures}
      backgroundColor="white"
      mobileAppTitle="Une application mobile pour former vos "
      mobileAppHighlight="collaborateurs"
      mobileAppImage="/images/platform/mobile-app.png"
      mobileAppParagraphs={[
        "Depuis près de vingt ans, Smice aide les restaurateurs à structurer leur qualité et à professionnaliser leurs équipes grâce à une expertise terrain solide.",
        "Notre application mobile guide chaque contrôle et facilite l'intégration des bons gestes, tandis que la plateforme d'analyse donne aux managers une visibilité immédiate sur les résultats.",
        "Avec une communauté de Smiceurs formés, Smice assure une montée en compétence continue pour renforcer l'excellence opérationnelle et l'expérience client."
      ]}
    />
    <FAQSection 
      backgroundColor="#F5F7FA"
      faqItems={[
        {
          question: "Comment garantir la même qualité dans tous vos restaurants, même quand vous n'êtes pas sur place ?",
          answer: "Grâce aux visites mystère, aux audits et à l'auto-évaluation, Smice vous donne une vision homogène de chaque établissement. Les standards sont mesurés de la même façon partout, avec preuves visuelles et scores comparatifs, pour assurer une qualité cohérente sur tout votre réseau.",
          defaultOpen: false
        },
        {
          question: "Comment réduire l'impact du turnover sur l'expérience client ?",
          answer: "L'auto-évaluation transforme chaque contrôle en outil de formation. Les équipes apprennent en faisant, corrigent immédiatement leurs erreurs et montent en compétence sans attendre une formation formelle.",
          defaultOpen: false
        },
        {
          question: "Comment être sûr que mes standards sont réellement appliqués ?",
          answer: "Entre auto-évaluation, audits opérationnels et visites mystère, vous combinez perception, conformité et exécution. Une triple lecture indispensable pour garantir une qualité réellement maîtrisée.",
          defaultOpen: false
        },
        {
          question: "Comment obtenir une vision terrain fiable quand vos managers ne peuvent pas être partout ?",
          answer: "La communauté de Smiceurs intervient sur site, à visage découvert ou en client mystère, selon la mission. Leur regard extérieur complète parfaitement celui de vos managers et vous offre une lecture indépendante et objective.",
          defaultOpen: false
        }
      ]}
    />
    <Contact decorationColor="#75898A" />
  </main>
  
  <Footer />
</Layout>
