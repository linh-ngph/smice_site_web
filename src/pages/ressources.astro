---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/sections/common/Contact.astro';

const seoConfig = {
  title: "Ressources | SMICE",
  description: "Découvrez nos articles, podcasts, vidéos et livres blancs sur le mystery shopping et l'expérience client.",
  keywords: ["SMICE", "ressources", "articles", "podcasts", "mystery shopping", "livres blancs"],
};

const featuredResources = [
  {
    type: "podcast",
    image: "/images/resources/podcast-cdrc.jpg",
    title: "CDRC Le Podcast : Saison 02 Episode 03 : Smice",
    description: "Dans cet épisode de la saison 02 de CDRC Le podcast nous recevons Julien Mondhard, CEO de Smice...",
    cta: "Écouter le podcast",
    link: "#",
    icon: "podcast"
  },
  {
    type: "video",
    image: "/images/resources/interview-kozy.jpg",
    title: "Antoine Le Vu (Kozy) : Construire une chaîne de brunch à succès et miser sur l'expérience client",
    description: "Bienvenue dans cette interview inspirante d'Antoine Le Vu, co-fondateur des Brunch Kozy, une enseigne devenue incontournable à Paris...",
    cta: "Voir la vidéo",
    link: "#",
    icon: "video"
  },
  {
    type: "linkedin",
    image: "/images/resources/linkedin-noel.jpg",
    title: "Émotion & Excellence opérationnelle : préparer la magie de Noël",
    description: "La période de Noël approche, et avec elle ce mélange unique de chaleur, d'anticipation et d'émotion.",
    cta: "Consulter le Post Linkedin",
    link: "#",
    icon: "linkedin"
  }
];

const articles = [
  {
    image: "/images/resources/article-1.jpg",
    title: "Qu'est ce que c'est, une bonne visite mystère ?",
    description: "Voyons ensemble comment une visite mystère peut être particulièrement bien réalisée, ou virer au cauchemar....",
    link: "#"
  },
  {
    image: "/images/resources/article-2.jpg",
    title: "Qu'est ce que c'est, une bonne visite mystère ?",
    description: "Voyons ensemble comment une visite mystère peut être particulièrement bien réalisée, ou virer au cauchemar....",
    link: "#"
  },
  {
    image: "/images/resources/article-3.jpg",
    title: "Qu'est ce que c'est, une bonne visite mystère ?",
    description: "Voyons ensemble comment une visite mystère peut être particulièrement bien réalisée, ou virer au cauchemar....",
    link: "#"
  }
];
---

<Layout 
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
>
  <Navbar currentPath="/ressources" />
  
  <main>
    <!-- Hero Section -->
    <section class="resources-hero">
      <div class="hero-container">
        <h1 class="hero-title">
          Découvrez nos derniers <span class="highlight">articles</span>
        </h1>
        <p class="hero-subtitle">
          Découvrez nos articles de blogs, centrés sur l'amélioration de votre qualité d'audit clients.
        </p>
      </div>
    </section>

    <!-- Featured Resources Section -->
    <section class="featured-section">
      <div class="featured-container">
        <div class="featured-grid">
          {featuredResources.map((resource) => (
            <article class="featured-card">
              <div class="card-image-wrapper">
                <img src={resource.image} alt={resource.title} class="card-image" />
                {resource.icon === "linkedin" && (
                  <span class="media-badge linkedin">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </span>
                )}
              </div>
              <div class="card-content">
                <h3 class={`card-title ${resource.icon === "video" ? "underlined" : ""}`}>
                  {resource.title}
                </h3>
                <p class="card-description">{resource.description}</p>
                <a href={resource.link} class="card-cta">
                  {resource.cta}
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- White Papers Banner -->
    <section class="whitepaper-section">
      <div class="whitepaper-container">
        <div class="whitepaper-card">
          <div class="whitepaper-content">
            <p class="whitepaper-tagline">Envie d'en savoir plus le Mystery Shopping ?</p>
            <h2 class="whitepaper-title">Découvrez nos livres blancs</h2>
            <a href="#" class="whitepaper-cta">En savoir plus</a>
          </div>
          <div class="whitepaper-images">
            <img src="/images/resources/livreblanc-1.png" alt="Livre blanc 1" class="lb-img lb-1" />
            <img src="/images/resources/livreblanc-2.png" alt="Livre blanc 2" class="lb-img lb-2" />
            <img src="/images/resources/livreblanc-3.png" alt="Livre blanc 3" class="lb-img lb-3" />
            <img src="/images/resources/livreblanc-4.png" alt="Livre blanc 4" class="lb-img lb-4" />
          </div>
        </div>
      </div>
    </section>

    <!-- Articles Section -->
    <section class="articles-section">
      <div class="articles-container">
        <div class="articles-grid">
          {articles.map((article) => (
            <article class="article-card">
              <div class="article-image-wrapper">
                <div class="image-frame">
                  <img src={article.image} alt={article.title} />
                </div>
              </div>
              <div class="article-content">
                <h3 class="article-title">{article.title}</h3>
                <p class="article-description">{article.description}</p>
                <a href={article.link} class="article-cta">Lire l'article</a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <Contact decorationColor="#75898A" />
  </main>
  
  <Footer />
</Layout>

<style>
  /* Hero Section */
  .resources-hero {
    padding: 120px 24px 60px;
    background: white;
    text-align: center;
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .hero-title .highlight {
    color: #4A5FC1;
    text-decoration: underline;
    text-decoration-thickness: 3px;
    text-underline-offset: 6px;
  }

  .hero-subtitle {
    font-size: 16px;
    color: #6B7280;
    margin: 0;
    line-height: 1.6;
  }

  /* Featured Section */
  .featured-section {
    padding: 40px 24px 80px;
    background: white;
  }

  .featured-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .featured-card {
    display: flex;
    flex-direction: column;
  }

  .card-image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .media-badge {
    position: absolute;
    bottom: 12px;
    right: 12px;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .media-badge.linkedin {
    background: #0077B5;
    color: white;
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 17px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 12px 0;
    line-height: 1.4;
  }

  .card-title.underlined {
    text-decoration: underline;
    text-decoration-color: #4A5FC1;
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
  }

  .card-description {
    font-size: 14px;
    color: #6B7280;
    line-height: 1.6;
    margin: 0 0 20px 0;
    flex: 1;
  }

  .card-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 24px;
    background: #4A5FC1;
    color: white;
    font-size: 14px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .card-cta:hover {
    background: #3D4EAA;
    transform: translateY(-2px);
  }

  /* White Paper Section */
  .whitepaper-section {
    padding: 0 24px 80px;
    background: white;
  }

  .whitepaper-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .whitepaper-card {
    background: linear-gradient(135deg, #4A5FC1 0%, #6B7FD7 100%);
    border-radius: 24px;
    padding: 50px 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    position: relative;
    overflow: hidden;
    min-height: 220px;
  }

  .whitepaper-content {
    flex: 0 0 auto;
    max-width: 400px;
    position: relative;
    z-index: 2;
  }

  .whitepaper-tagline {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 8px 0;
  }

  .whitepaper-title {
    font-size: 32px;
    font-weight: 700;
    color: white;
    margin: 0 0 24px 0;
    line-height: 1.2;
  }

  .whitepaper-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background: white;
    color: #1A1A2E;
    font-size: 14px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .whitepaper-cta:hover {
    background: #F4F7FF;
    transform: translateY(-2px);
  }

  .whitepaper-images {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: -20px;
    position: relative;
    height: 180px;
  }

  .lb-img {
    height: 160px;
    width: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease;
  }

  .lb-img.lb-1 {
    transform: rotate(-8deg) translateX(30px);
    z-index: 1;
  }

  .lb-img.lb-2 {
    transform: rotate(-3deg) translateX(10px);
    z-index: 2;
  }

  .lb-img.lb-3 {
    transform: rotate(3deg) translateX(-10px);
    z-index: 3;
  }

  .lb-img.lb-4 {
    transform: rotate(8deg) translateX(-30px);
    z-index: 4;
  }

  .whitepaper-images:hover .lb-img.lb-1 {
    transform: rotate(-12deg) translateX(40px) translateY(-5px);
  }

  .whitepaper-images:hover .lb-img.lb-4 {
    transform: rotate(12deg) translateX(-40px) translateY(-5px);
  }

  /* Articles Section */
  .articles-section {
    padding: 80px 24px;
    background: white;
  }

  .articles-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .article-card {
    display: flex;
    flex-direction: column;
  }

  .article-image-wrapper {
    margin-bottom: 24px;
  }

  .image-frame {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    border: 3px solid #4A5FC1;
    padding: 8px;
    background: white;
  }

  .image-frame img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  .article-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .article-title {
    font-size: 18px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 12px 0;
    line-height: 1.4;
  }

  .article-description {
    font-size: 14px;
    color: #6B7280;
    line-height: 1.6;
    margin: 0 0 20px 0;
    flex: 1;
  }

  .article-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 24px;
    background: #4A5FC1;
    color: white;
    font-size: 14px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .article-cta:hover {
    background: #3D4EAA;
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .hero-title {
      font-size: 36px;
    }

    .featured-grid,
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .whitepaper-card {
      flex-direction: column;
      text-align: center;
      padding: 40px 32px;
    }

    .whitepaper-content {
      max-width: 100%;
    }

    .whitepaper-images {
      justify-content: center;
      height: 150px;
    }

    .lb-img {
      height: 130px;
    }
  }

  @media (max-width: 768px) {
    .resources-hero {
      padding: 100px 20px 40px;
    }

    .hero-title {
      font-size: 32px;
    }

    .featured-section {
      padding: 20px 20px 60px;
    }

    .featured-grid,
    .articles-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .whitepaper-section {
      padding: 0 20px 60px;
    }

    .whitepaper-title {
      font-size: 26px;
    }

    .whitepaper-images {
      flex-wrap: wrap;
      height: auto;
      gap: 12px;
    }

    .lb-img {
      height: 100px;
      transform: none !important;
    }

    .whitepaper-images:hover .lb-img {
      transform: none !important;
    }

    .articles-section {
      padding: 60px 20px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 28px;
    }

    .whitepaper-card {
      padding: 32px 24px;
    }

    .whitepaper-title {
      font-size: 22px;
    }

    .lb-img {
      height: 80px;
    }
  }
</style>
