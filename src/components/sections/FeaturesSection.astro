---
interface Feature {
  tag: string;
  title: string;
  image: string;
  imageAlt: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  platformImage?: string;
  platformImageAlt?: string;
  subtitle?: string;
  subtitleHighlight1?: string;
  subtitleHighlight2?: string;
  features?: Feature[];
  backgroundColor?: string;
  // Mobile app section props
  mobileAppTitle?: string;
  mobileAppHighlight?: string;
  mobileAppImage?: string;
  mobileAppParagraphs?: string[];
}

const {
  title = "Une ",
  titleHighlight = "plateforme",
  platformImage = "/images/platform/dashboard.png",
  platformImageAlt = "Plateforme SMICE",
  subtitle = "Des ",
  subtitleHighlight1 = "fonctionnalités",
  subtitleHighlight2 = "restauration",
  features = [],
  backgroundColor = "white",
  mobileAppTitle = "Une application mobile pour former vos ",
  mobileAppHighlight = "collaborateurs",
  mobileAppImage = "/images/platform/mobile-app.png",
  mobileAppParagraphs = []
} = Astro.props;
---

<section class="platform-section" style={`background-color: ${backgroundColor};`}>
  <div class="platform-container">
    <!-- Title -->
    <h2 class="platform-title">
      {title}<span class="highlight-yellow">{titleHighlight}</span> pensée pour répondre à vos besoins
    </h2>

    <!-- Platform Image -->
    <div class="platform-image-wrapper">
      <div class="platform-image-container">
        <img src={platformImage} alt={platformImageAlt} class="platform-image" />
      </div>
    </div>

    <!-- Subtitle -->
    <h3 class="platform-subtitle">
      {subtitle}<span class="highlight-yellow">{subtitleHighlight1}</span> adaptées à la <span class="highlight-yellow">{subtitleHighlight2}</span> !
    </h3>

    <!-- Features Grid -->
    {features.length > 0 && (
      <div class="features-grid">
        <!-- Large left card -->
        <div class="feature-card feature-large" style="background-color: #D4E9E9;">
          <div class="feature-image-large">
            <img src={features[0].image} alt={features[0].imageAlt} />
          </div>
          <div class="feature-content-large">
            <span class="feature-tag">{features[0].tag}</span>
            <p class="feature-title">{features[0].title}</p>
          </div>
        </div>

        <!-- Right column with 2 cards -->
        <div class="feature-column">
          {features.length > 1 && (
            <div class="feature-card feature-small" style="background-color: #E8F4F4;">
              <div class="feature-content-small">
                <span class="feature-tag">{features[1].tag}</span>
                <p class="feature-title-small">{features[1].title}</p>
              </div>
              <div class="feature-image-small">
                <img src={features[1].image} alt={features[1].imageAlt} />
              </div>
            </div>
          )}
          
          {features.length > 2 && (
            <div class="feature-card feature-small" style="background-color: #F5F5F5;">
              <div class="feature-content-small">
                <span class="feature-tag">{features[2].tag}</span>
                <p class="feature-title-small">{features[2].title}</p>
              </div>
              <div class="feature-image-small feature-image-collage">
                <img src={features[2].image} alt={features[2].imageAlt} />
              </div>
            </div>
          )}
        </div>
      </div>
    )}

    <!-- Mobile App Section -->
    {mobileAppParagraphs.length > 0 && (
      <div class="mobile-app-section">
        <h2 class="mobile-app-title">
          {mobileAppTitle}<span class="highlight-yellow">{mobileAppHighlight}</span>
        </h2>
        
        <div class="mobile-app-content">
          <div class="mobile-app-image-wrapper">
            <div class="mobile-app-shape"></div>
            <img src={mobileAppImage} alt="Application mobile SMICE" class="mobile-app-image" />
          </div>
          
          <div class="mobile-app-text">
            {mobileAppParagraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .platform-section {
    padding: 80px 24px;
  }

  .platform-container {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Title */
  .platform-title {
    font-size: 28px;
    font-weight: 700;
    color: #4A5568;
    text-align: center;
    margin: 0 0 50px 0;
    line-height: 1.3;
    font-style: italic;
  }

  .highlight-yellow {
    text-decoration: underline;
    text-decoration-color: #F8B83C;
    text-decoration-thickness: 3px;
    text-underline-offset: 5px;
    color: #4A5568;
  }

  /* Platform Image */
  .platform-image-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 70px;
    position: relative;
  }

  .platform-image-container {
    width: 100%;
    max-width: 650px;
    position: relative;
  }

  .platform-image-container::before {
    content: '';
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100vw;
    height: 120px;
    background-color: #A8D5D8;
    z-index: 0;
  }

  .platform-image {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 1;
    display: block;
  }

  /* Subtitle */
  .platform-subtitle {
    font-size: 26px;
    font-weight: 700;
    color: #4A5568;
    text-align: center;
    margin: 0 0 50px 0;
    line-height: 1.3;
    font-style: italic;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .feature-card {
    border-radius: 16px;
    overflow: hidden;
  }

  /* Large left card */
  .feature-large {
    display: flex;
    flex-direction: column;
    min-height: 400px;
  }

  .feature-image-large {
    flex: 1;
    padding: 24px 24px 0 24px;
    display: flex;
    justify-content: flex-end;
  }

  .feature-image-large img {
    width: 70%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .feature-content-large {
    padding: 24px 28px 32px 28px;
  }

  .feature-tag {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #5BA8A0;
    display: block;
    margin-bottom: 12px;
  }

  .feature-title {
    font-size: 20px;
    font-weight: 600;
    color: #2D3748;
    line-height: 1.4;
    margin: 0;
  }

  /* Right column */
  .feature-column {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Small cards */
  .feature-small {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    min-height: 180px;
    flex: 1;
  }

  .feature-content-small {
    flex: 1;
    padding: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .feature-title-small {
    font-size: 17px;
    font-weight: 600;
    color: #2D3748;
    line-height: 1.4;
    margin: 0;
  }

  .feature-image-small {
    width: 45%;
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-image-small img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .feature-image-collage img {
    object-fit: cover;
    height: 100%;
  }

  /* ===== Mobile App Section ===== */
  .mobile-app-section {
    margin-top: 100px;
  }

  .mobile-app-title {
    font-size: 32px;
    font-weight: 700;
    color: #2D3748;
    text-align: center;
    margin: 0 0 60px 0;
    line-height: 1.3;
  }

  .mobile-app-content {
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .mobile-app-image-wrapper {
    position: relative;
    flex-shrink: 0;
    width: 320px;
  }

  .mobile-app-shape {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 280px;
    height: 380px;
    background-color: #5A6B7A;
    border-radius: 24px;
    z-index: 0;
  }

  .mobile-app-image {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 280px;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .mobile-app-text {
    flex: 1;
  }

  .mobile-app-text p {
    font-size: 15px;
    line-height: 1.7;
    color: #4A5568;
    margin: 0 0 24px 0;
  }

  .mobile-app-text p:last-child {
    margin-bottom: 0;
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .platform-section {
      padding: 60px 24px;
    }

    .platform-title {
      font-size: 24px;
      margin-bottom: 40px;
    }

    .platform-image-wrapper {
      margin-bottom: 60px;
    }

    .platform-image-container::before {
      height: 100px;
    }

    .platform-subtitle {
      font-size: 22px;
      margin-bottom: 40px;
    }

    .feature-large {
      min-height: 350px;
    }

    .feature-title {
      font-size: 18px;
    }

    .feature-title-small {
      font-size: 15px;
    }

    .mobile-app-section {
      margin-top: 80px;
    }

    .mobile-app-title {
      font-size: 28px;
      margin-bottom: 50px;
    }

    .mobile-app-content {
      gap: 40px;
    }

    .mobile-app-image-wrapper {
      width: 280px;
    }

    .mobile-app-shape {
      width: 240px;
      height: 340px;
    }

    .mobile-app-image {
      max-width: 240px;
    }

    .mobile-app-text p {
      font-size: 14px;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .platform-section {
      padding: 50px 20px;
    }

    .platform-title {
      font-size: 22px;
      margin-bottom: 35px;
    }

    .platform-image-wrapper {
      margin-bottom: 50px;
    }

    .platform-image-container::before {
      height: 80px;
    }

    .platform-subtitle {
      font-size: 20px;
      margin-bottom: 35px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .feature-large {
      min-height: auto;
    }

    .feature-image-large {
      padding: 20px 20px 0 20px;
    }

    .feature-image-large img {
      width: 80%;
    }

    .feature-content-large {
      padding: 20px 24px 28px 24px;
    }

    .feature-small {
      min-height: 160px;
    }

    .feature-content-small {
      padding: 20px;
    }

    .feature-title {
      font-size: 17px;
    }

    .feature-title-small {
      font-size: 15px;
    }

    .feature-tag {
      font-size: 10px;
      margin-bottom: 10px;
    }

    .mobile-app-section {
      margin-top: 60px;
    }

    .mobile-app-title {
      font-size: 24px;
      margin-bottom: 40px;
    }

    .mobile-app-content {
      flex-direction: column;
      gap: 40px;
    }

    .mobile-app-image-wrapper {
      width: 100%;
      max-width: 280px;
      margin: 0 auto;
    }

    .mobile-app-shape {
      width: 220px;
      height: 320px;
    }

    .mobile-app-image {
      max-width: 220px;
    }

    .mobile-app-text p {
      font-size: 14px;
      text-align: center;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .platform-title {
      font-size: 20px;
    }

    .platform-subtitle {
      font-size: 18px;
    }

    .feature-image-large img {
      width: 90%;
    }

    .feature-title {
      font-size: 16px;
    }

    .feature-title-small {
      font-size: 14px;
    }

    .feature-image-small {
      width: 40%;
      padding: 12px;
    }

    .mobile-app-title {
      font-size: 20px;
    }

    .mobile-app-shape {
      width: 200px;
      height: 290px;
    }

    .mobile-app-image {
      max-width: 200px;
    }
  }
</style>
