---
interface ServiceItem {
  title: string;
  subtitle: string;
  image: string;
  description: string;
  buttonText: string;
  buttonStyle: "light" | "primary" | "secondary";
  href: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  services?: ServiceItem[];
  backgroundColor?: string;
}

const defaultServices: ServiceItem[] = [
  {
    title: "Vos process opérationnels",
    subtitle: "Analysez la qualité là où tout commence.",
    image: "/images/homepage/experience-client/process-operationel.jpg",
    description: "Mesurez l'application réelle de vos standards, point par point, directement sur le terrain.",
    buttonText: "En savoir plus",
    buttonStyle: "light",
    href: "/services#process"
  },
  {
    title: "Nos clients mystères",
    subtitle: "Découvrez l'expérience telle que vécue par vos clients",
    image: "/images/homepage/experience-client/nos-clients-mystere.jpg",
    description: "Évaluez la qualité perçue à travers des scénarios terrain fiables et représentatifs.",
    buttonText: "En savoir plus",
    buttonStyle: "primary",
    href: "/services#mystery"
  },
  {
    title: "Vos collaborateurs",
    subtitle: "Impliquez vos équipes dans l'amélioration continue.",
    image: "/images/homepage/experience-client/vos-collaborateurs.jpg",
    description: "Donnez-leur les outils pour s'auto-évaluer et suivre leurs progrès en temps réel.",
    buttonText: "En savoir plus",
    buttonStyle: "secondary",
    href: "/services#collaborators"
  }
];

const { 
  title = "Une mesure de l'expérience client, à ",
  titleHighlight = "360°",
  subtitle = "Smice aide les marques à maîtriser la fidélisation et la qualité perçue, en pilotant l'expérience client depuis vos standards, vos process et vos équipes",
  services = defaultServices,
  backgroundColor = "#F4F7FF"
} = Astro.props;
---

<section class="experience" id="experience" style={`background-color: ${backgroundColor};`}>
  <div class="experience-container">
    <div class="experience-header">
      <h2 class="experience-title">
        {title}<span class="highlight-360">{titleHighlight}<img src="/images/homepage/subline-360.svg" alt="" class="subline-360" /></span>
      </h2>
      <p class="experience-subtitle">
        {subtitle}
      </p>
    </div>
    
    <div class="services-grid">
      {services.map((service, index) => (
        <div class={`service-card card-${index + 1}`}>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-subtitle">{service.subtitle}</p>
          
          <div class="service-image">
            <img src={service.image} alt={service.title} />
          </div>
          
          <p class="service-description">{service.description}</p>
          
          <a href={service.href} class={`service-btn btn-${service.buttonStyle}`}>
            {service.buttonText}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background-color: #F4F7FF;
    padding: 80px 24px 100px;
    position: relative;
    z-index: 20;
  }

  .experience-container {
    max-width: 1224px;
    margin: 0 auto;
  }

  .experience-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .experience-title {
    font-size: 40px;
    font-weight: 800;
    color: #1A1A2E;
    margin-bottom: 20px;
  }

  .experience-title .highlight-360 {
    position: relative;
    display: inline-block;
    color: #6989D4;
  }

  .subline-360 {
    position: absolute;
    bottom: 5px;
    left: 0;
    width: 100%;
    height: auto;
  }

  .experience-subtitle {
    font-size: 20px;
    font-weight: 500;
    line-height: 1.7;
    color: #6B7280;
    max-width: 1224px;
    margin: 0 auto;
  }

  /* Services Grid */
  .services-grid {
    display: flex;
    justify-content: space-between;
    gap: 48px;
  }

  .service-card {
    /* Remove fixed width to allow flex to control layout */
    width: auto;
    flex: 1 1 0;
    max-width: 344px;
    background-color: transparent;
    text-align: center;
    display: flex;
    flex-direction: column;
  }

  .service-title {
    font-size: 24px;
    font-weight: 700;
    color: #75898A;
    margin-bottom: 8px;
  }

  .service-subtitle {
    font-size: 14px;
    font-weight: 400;
    color: #7C797F;
    margin-bottom: 20px;
    min-height: 36px;
  }

  .service-image {
    width: 344px;
    height: 180px;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
  }

  .service-description {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.6;
    color: #7C797F;
    margin-bottom: 24px;
    flex-grow: 1;
  }

  /* Button Styles */
  .service-btn {
    display: block;
    width: 100%;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 6px;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-light {
    background-color: #75898A;
    color: white;
  }

  .btn-light:hover {
    background-color: #647677;
  }

  .btn-primary {
    background-color: #6989D4;
    color: white;
  }

  .btn-primary:hover {
    background-color: #5678c3;
    box-shadow: 0 4px 12px rgba(105, 137, 212, 0.3);
  }

  .btn-secondary {
    background-color: #C5CAE9;
    color: #4A5FC1;
  }

  .btn-secondary:hover {
    background-color: #B0B7DC;
  }

  /* Card-specific title colors */
  .card-2 .service-title {
    color: #6989D4;
  }
  .card-3 .service-title {
    color: #9B8AAD;
  }
  .card-3 .service-subtitle,
  .card-3 .service-description {
    color: #7C797F;
  }
  .card-3 .btn-secondary {
    background-color: #9B8AAD;
    color: #fff;
  }
  .card-3 .btn-secondary:hover {
    background-color: #866e9e;
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .experience {
      padding: 60px 24px 80px;
    }

    .experience-title {
      font-size: 32px;
    }

    .services-grid {
      gap: 24px;
    }

    .service-image {
      height: 160px;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .experience {
      padding: 50px 20px 60px;
    }

    .experience-header {
      margin-bottom: 40px;
    }

    .experience-title {
      font-size: 26px;
    }

    .experience-subtitle {
      font-size: 15px;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 400px;
      margin: 0 auto;
    }

    .service-subtitle {
      min-height: auto;
    }

    .service-image {
      height: 200px;
    }

    .service-description {
      min-height: auto;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .experience-title {
      font-size: 22px;
    }

    .service-title {
      font-size: 18px;
    }
  }
</style>
