---
// Resources/Download Section - Livre Blanc
---

<section class="resources-section" id="resources">
  <div class="resources-container">
    <div class="resources-card">
      <div class="resources-content">
        <p class="resources-tagline">Téléchargez gratuitement notre livre blanc</p>
        <h2 class="resources-title">Mystery Shopping 2.0</h2>
        <div class="resources-buttons">
          <a href="#" class="btn btn-primary">Télécharger</a>
          <a href="#" class="btn btn-outline">Visionner</a>
        </div>
      </div>
      
      <div class="resources-image">
        <img src="/images/homepage/example.png" alt="Livre blanc Mystery Shopping 2.0" />
      </div>
    </div>
  </div>
</section>

<style>
  .resources-section {
    background-color: #FFFFFE;
    padding: 80px 24px;
  }

  .resources-container {
    max-width: 1224px;
    width: 100%;
    margin: 0 auto;
  }

  .resources-card {
    background: #435888;
    border-radius: 24px;
    padding: 32px 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    position: relative;
    overflow: hidden;
    max-width: 1224px;
    width: 100%;
    margin: 0 auto;
  }

  .resources-content {
    flex: 1;
    max-width: 450px;
    position: relative;
    z-index: 2;
  }

  .resources-tagline {
    font-size: 20px;
    font-weight: 700;
    font-style: normal;
    color: #D9E1F3;
    margin: 0 0 8px 0;
  }

  .resources-title {
    font-size: 36px;
    font-weight: 700;
    color: #FFFFFE;
    margin: 0 0 28px 0;
    line-height: 1.2;
  }

  .resources-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 28px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: #FFFFFE;
    color: #435888;
    border: 2px solid white;
  }

  .btn-primary:hover {
    background: transparent;
    color: white;
  }

  .btn-outline {
    background: #B4C4E9;
    color: #435888;
    border: none;
    padding: 8px 16px;
    font-size: 12px;
    font-weight: 600;
    font-style: normal;
  }

  .btn-outline:hover {
    background: #A0B3DB;
    color: #435888;
  }

  /* Image */
  .resources-image {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    border-radius: 0 24px 24px 0;
    display: flex;
    align-items: stretch;
    justify-content: flex-end;
  }

  .resources-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: right center;
    display: block;
  }

  .resources-content {
    position: relative;
    z-index: 2;
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .resources-section {
      padding: 60px 24px;
    }

    .resources-card {
      padding: 40px 40px;
      gap: 30px;
    }

    .resources-title {
      font-size: 30px;
    }

    .resources-tagline {
      font-size: 14px;
    }

    .resources-image {
      max-width: 400px;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .resources-section {
      padding: 50px 20px;
    }

    .resources-card {
      flex-direction: column;
      padding: 35px 28px;
      text-align: center;
      gap: 30px;
    }

    .resources-content {
      max-width: 100%;
    }

    .resources-title {
      font-size: 26px;
      margin-bottom: 24px;
    }

    .resources-tagline {
      font-size: 13px;
    }

    .resources-buttons {
      justify-content: center;
      flex-direction: row;
      flex-wrap: nowrap;
      gap: 12px;
    }

    .btn {
      padding: 11px 20px;
      font-size: 13px;
      flex: 1;
      max-width: 150px;
    }

    .resources-image {
      opacity: 0.3;
    }

    .resources-image img {
      opacity: 0.5;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .resources-card {
      padding: 30px 24px;
      border-radius: 20px;
    }

    .resources-title {
      font-size: 22px;
    }

    .resources-buttons {
      flex-direction: row;
      gap: 10px;
    }

    .btn {
      flex: 1;
      max-width: 140px;
      padding: 10px 16px;
      font-size: 12px;
    }
  }
</style>
