---
import { ChevronLeft, ChevronRight } from '@lucide/astro';

interface Testimonial {
  id: number;
  quote: string;
  name: string;
  company: string;
  avatar: string;
  nameColor: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  testimonials?: Testimonial[];
  backgroundColor?: string;
  sublineImage?: string;
}

// Default testimonials data
const defaultTestimonials: Testimonial[] = [
  {
    id: 1,
    quote: "Smice a transformé notre approche du service client. Grâce à leur expertise en mystery shopping, nous avons pu identifier des opportunités d'amélioration et renforcer notre engagement envers nos clients.",
    name: "Mickey Mouse",
    company: "DisneyLand Paris",
    avatar: "/images/homepage/mickey-avatar.png",
    nameColor: "#75898A"
  },
  {
    id: 2,
    quote: "Smice a transformé notre approche du service client. Grâce à leur expertise en mystery shopping, nous avons pu identifier des opportunités d'amélioration et renforcer notre engagement envers nos clients.",
    name: "Mickey Mouse",
    company: "DisneyLand Paris",
    avatar: "/images/homepage/mickey-avatar.png",
    nameColor: "#435888"
  },
  {
