---
// Team Section - Qui sommes-nous page

const teamMembers = [
  { name: "Julien", role: "Fondateur et Tyran", image: "/images/about/Team-section/Julien-fondateur.png" },
  { name: "Lucien", role: "Intégrateur web", image: "/images/about/Team-section/Lucien-intégrateurWeb.png" },
  { name: "Gaëlle", role: "Directrice de Clientèle", image: "/images/about/Team-section/Gaelle-DirectriceCliente.png" },
  { name: "Thomas", role: "Product Owner", image: "/images/about/Team-section/Thomas-ProductOwner.png" },
  { name: "Evan", role: "Chargé de terrain", image: "/images/about/Team-section/Evan-ChargeTerrain.png" },
  { name: "Magali", role: "Directrice commerciale", image: "/images/about/Team-section/Magali-DirectriceCommerciale.png" },
  { name: "Le développeur", role: "Développeur Front", image: "/images/about/Team-section/Développeur.png" },
  { name: "Virginie", role: "Cheffe de projet", image: "/images/about/Team-section/Virginie-cheffeprojet.png" },
];
---

<section class="team-section" id="team">
  <div class="team-container">
    <h2 class="team-title">
      Smice, c'est avant tout une <span class="underline">équipe engagée</span><br />
      qui partage la même <span class="underline">vision</span>
    </h2>
    
    <div class="team-grid">
      {teamMembers.map((member) => (
        <div class="team-member">
          <div class="member-image">
            <img src={member.image} alt={member.name} />
          </div>
          <h3 class="member-name">{member.name}</h3>
          <p class="member-role">{member.role}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    background-color: white;
    padding: 80px 24px;
  }

  .team-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .team-title {
    font-size: 36px;
    font-weight: 700;
    color: var(--text-dark);
    text-align: center;
    line-height: 1.3;
    margin: 0 0 60px 0;
  }

  .team-title .underline {
    color: var(--primary-blue);
    text-decoration: underline;
    text-decoration-color: var(--primary-blue);
    text-underline-offset: 4px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px 30px;
  }

  .team-member {
    text-align: left;
  }

  .member-image {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 16px;
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .member-name {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0 0 4px 0;
  }

  .member-role {
    font-size: 14px;
    color: var(--text-gray);
    margin: 0;
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .team-title {
      font-size: 30px;
    }

    .team-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 25px 20px;
    }

    .member-name {
      font-size: 16px;
    }

    .member-role {
      font-size: 13px;
    }

    .member-image {
      border-radius: 12px;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .team-section {
      padding: 60px 20px;
    }

    .team-title {
      font-size: 24px;
      margin-bottom: 40px;
    }

    .team-title br {
      display: none;
    }

    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px 20px;
    }

    .member-name {
      font-size: 16px;
    }

    .member-role {
      font-size: 13px;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .team-title {
      font-size: 22px;
    }

    .team-grid {
      gap: 24px 16px;
    }

    .member-image {
      border-radius: 12px;
    }
  }
</style>
