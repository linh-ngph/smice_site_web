---
interface Service {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  title?: string;
  services?: Service[];
}

const {
  title = "Nos Services",
  services = [
    { title: "Service 1", description: "Description du service", icon: "üìä" },
    { title: "Service 2", description: "Description du service", icon: "üîç" },
    { title: "Service 3", description: "Description du service", icon: "‚ú®" },
  ]
} = Astro.props;
---

<section class="section section-alt" id="services">
  <div class="container">
    <h2>{title}</h2>
    
    <div class="carousel-container">
      <!-- Navigation arrows -->
      <button class="carousel-btn carousel-btn-prev" aria-label="Pr√©c√©dent">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>
      
      <div class="carousel-wrapper">
        <div class="carousel-track">
          {services.map((service, index) => (
            <article class="service-card" data-index={index}>
              {service.icon && <span class="service-icon">{service.icon}</span>}
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </article>
          ))}
        </div>
      </div>
      
      <button class="carousel-btn carousel-btn-next" aria-label="Suivant">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>
    </div>
    
    <!-- Dots navigation -->
    <div class="carousel-dots">
      {services.map((_, index) => (
        <button 
          class={`carousel-dot ${index === 0 ? 'active' : ''}`} 
          data-index={index}
          aria-label={`Aller √† la carte ${index + 1}`}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .carousel-container {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 40px;
    position: relative;
  }

  .carousel-wrapper {
    flex: 1;
    overflow: hidden;
    border-radius: var(--border-radius);
  }

  .carousel-track {
    display: flex;
    gap: 24px;
    transition: transform 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
    will-change: transform;
  }

  .service-card {
    flex: 0 0 calc(33.333% - 16px);
    background-color: var(--bg-white);
    padding: 32px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    min-height: 200px;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-icon {
    font-size: 40px;
    display: block;
    margin-bottom: 16px;
  }

  .service-card h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-dark);
  }

  .service-card p {
    color: var(--text-gray);
    line-height: 1.6;
  }

  /* Carousel buttons */
  .carousel-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--bg-white);
    border: 1px solid var(--border-color, #e5e7eb);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
    flex-shrink: 0;
    color: var(--text-dark);
    box-shadow: var(--shadow-sm);
  }

  .carousel-btn:hover {
    background: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
  }

  .carousel-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .carousel-btn:disabled:hover {
    background: var(--bg-white);
    color: var(--text-dark);
    border-color: var(--border-color, #e5e7eb);
  }

  /* Dots navigation */
  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 32px;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background: var(--border-color, #d1d5db);
    cursor: pointer;
    transition: var(--transition);
    padding: 0;
  }

  .carousel-dot:hover {
    background: var(--primary-color);
    opacity: 0.7;
  }

  .carousel-dot.active {
    background: var(--primary-color);
    transform: scale(1.2);
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .service-card {
      flex: 0 0 calc(50% - 12px);
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .carousel-container {
      gap: 8px;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
    }

    .service-card {
      flex: 0 0 100%;
    }

    .carousel-track {
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .carousel-btn {
      display: none;
    }

    .carousel-container {
      padding: 0;
    }

    .service-card {
      padding: 24px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('.carousel-track') as HTMLElement;
    const cards = document.querySelectorAll('.service-card');
    const dots = document.querySelectorAll('.carousel-dot');
    const prevBtn = document.querySelector('.carousel-btn-prev') as HTMLButtonElement;
    const nextBtn = document.querySelector('.carousel-btn-next') as HTMLButtonElement;
    
    if (!track || cards.length === 0) return;
    
    let currentIndex = 0;
    let cardsPerView = getCardsPerView();
    const totalCards = cards.length;
    
    function getCardsPerView(): number {
      if (window.innerWidth <= 768) return 1;
      if (window.innerWidth <= 1024) return 2;
      return 3;
    }
    
    function getMaxIndex(): number {
      return Math.max(0, totalCards - cardsPerView);
    }
    
    function updateCarousel() {
      const card = cards[0] as HTMLElement;
      const gap = 24;
      const cardWidth = card.offsetWidth + gap;
      const offset = currentIndex * cardWidth;
      
      track.style.transform = `translateX(-${offset}px)`;
      
      // Update dots
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
      
      // Update buttons
      if (prevBtn) prevBtn.disabled = currentIndex === 0;
      if (nextBtn) nextBtn.disabled = currentIndex >= getMaxIndex();
    }
    
    function goToSlide(index: number) {
      currentIndex = Math.max(0, Math.min(index, getMaxIndex()));
      updateCarousel();
    }
    
    // Button events
    prevBtn?.addEventListener('click', () => goToSlide(currentIndex - 1));
    nextBtn?.addEventListener('click', () => goToSlide(currentIndex + 1));
    
    // Dot events
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => goToSlide(index));
    });
    
    // Touch/swipe support
    let touchStartX = 0;
    let touchEndX = 0;
    
    track.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });
    
    track.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          goToSlide(currentIndex + 1);
        } else {
          goToSlide(currentIndex - 1);
        }
      }
    }, { passive: true });
    
    // Handle resize
    window.addEventListener('resize', () => {
      cardsPerView = getCardsPerView();
      goToSlide(Math.min(currentIndex, getMaxIndex()));
    });
    
    // Initial update
    updateCarousel();
  });
</script>
