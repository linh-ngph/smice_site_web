---
import { ArrowRight } from '@lucide/astro';

// Platform cards data
const platformCards = [
  {
    id: 1,
    title: "Une plateforme claire",
    titleColor: "#4B5563",
    image: "/images/homepage/platform/plateform-image.jpg",
    description: "Pilotez vos audits, vos standards et vos plans d'actions depuis un espace simple et visuel.",
    buttonText: "En savoir plus",
    buttonLink: "/services"
  },
  {
    id: 2,
    title: "Une application mobile terrain",
    titleColor: "#9B7BC7",
    image: "/images/homepage/platform/application-mobile.jpg",
    description: "Vos équipes remontent leurs observations, suivent leurs checklists et agissent plus vite.",
    buttonText: "Découvrir l'app",
    buttonLink: "/services"
  },
  {
    id: 3,
    title: "Du temps réel pour décider",
    titleColor: "#7DD3B8",
    image: "/images/homepage/platform/du-temps-reel.jpg",
    description: "Indicateurs, alertes et résultats accessibles instantanément, où que vous soyez.",
    buttonText: "Voir les fonctionnalités",
    buttonLink: "/services"
  }
];
---

<section class="platform-section" id="platform">
  <div class="platform-container">
    <h2 class="platform-title">La Plateforme & Application Smice en vidéo</h2>
    
    <div class="platform-grid">
      {platformCards.map((card, idx) => (
        <div class="platform-card">
          <h3
            class="card-title"
            style={{
              color:
                idx === 0 ? '#75898A' :
                idx === 1 ? '#6989D4' :
                idx === 2 ? '#9B8AAD' : card.titleColor
            }}
          >
            {card.title}
          </h3>
          <div class="card-image">
            <img src={card.image} alt={card.title} />
          </div>
          <p class="card-description">{card.description}</p>
          <a href={card.buttonLink} class="card-btn">
            {card.buttonText}
            <ArrowRight size={18} />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .platform-section {
    background-color: #FFFFFE;
    padding: 80px 24px;
  }

  .platform-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .platform-title {
    font-size: 40px;
    font-weight: 800;
    color: #435888;
    text-align: center;
    margin: 0 0 50px 0;
    font-family: inherit;
    letter-spacing: 0;
  }

  .platform-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    align-items: stretch;
  }

  .platform-card {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: 100%;
  }

  .card-title {
    font-size: 24px;
    font-weight: 700;
    margin: 0;
    text-align: center;
    font-family: inherit;
  }

  .card-image {
    width: 100%;
    height: 280px;
    border-radius: 4px;
    overflow: hidden;
    background: #E5E7EB;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-description {
    font-size: 14px;
    line-height: 1.6;
    color: #7C797F;
    margin: 0;
    flex: 1;
    font-weight: 500;
    font-family: inherit;
  }

  .card-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    background: #6989D4;
    color: #FFFFFE;
    font-size: 18px;
    font-weight: 600;
    padding: 14px 24px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: auto;
    box-shadow: 0 2px 8px 0 rgba(68, 88, 136, 0.08);
    font-family: inherit;
    text-align: center;
    width: 100%;
  }

  .card-btn:hover {
    background: #5574BE;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(105, 137, 212, 0.3);
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .platform-section {
      display: none;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .platform-section {
      display: none;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .platform-section {
      display: none;
    }
  }
</style>
