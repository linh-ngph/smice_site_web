---
import { ChevronDown } from '@lucide/astro';

// Client logos - replace with actual logo images
const clientLogos = [
  { name: "SNCF", image: "/images/homepage/logo-clients/sncf.png" },
  { name: "Free", image: "/images/homepage/logo-clients/free.png" },
  { name: "Bertrand", image: "/images/homepage/logo-clients/bertrand.png" },
  { name: "Club Med", image: "/images/homepage/logo-clients/club-med.png" },
  { name: "Sofitel", image: "/images/homepage/logo-clients/sofitel.png" },
  { name: "The Originals", image: "/images/homepage/logo-clients/the-originals.png" },
  { name: "Quick", image: "/images/homepage/logo-clients/quick.png" },
];
---

<section class="hero" id="hero">
  <div class="hero-container">
    <div class="hero-content">
      <p class="hero-tagline">Mesurez, entraînez, améliorez.</p>
      <h1 class="hero-title">
        Mesurez vos standards<br />
        qualité pour améliorer votre<br />
        excellence <span class="highlight">opérationnelle<img src="/images/homepage/subline-operationnelle.svg" alt="" class="subline-svg" /></span>
      </h1>
      <p class="hero-subtitle">
        L'accompagnement qualité qui transforme vos<br />
        promesses client en standards mesurables sur le<br />
        terrain.
      </p>
      <a href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ27UtgHDTUCRt4BpE4GOtimxdPfrdMg_TcPTaY934vA3zoDc1ZYjtMv_dpAdkZAlMQK4axFyMfh" class="btn-primary" target="_blank" rel="noopener">Prendre rendez-vous</a>
    </div>
    
    <div class="hero-image">
      <img src="/images/smice-hero.png" alt="Illustration 3D de bâtiments" />
    </div>
  </div>
  
  <!-- Client logos section -->
  <div class="clients-section">
    <p class="clients-text">
      Plus de <span class="highlight-link">80 entreprises<img src="/images/homePage/subline-80-entreprises.svg" alt="" class="subline-svg" /></span> nous confient leurs standards
    </p>
    
    <div class="logos-carousel">
      <div class="logos-track">
        {clientLogos.map((logo) => (
          <div class="logo-item">
            <img src={logo.image} alt={logo.name} />
          </div>
        ))}
        {/* Duplicate for infinite scroll effect */}
        {clientLogos.map((logo) => (
          <div class="logo-item">
            <img src={logo.image} alt={logo.name} />
          </div>
        ))}
      </div>
    </div>
    
    <a href="#mission" class="scroll-indicator" aria-label="Défiler vers le bas">
      <ChevronDown size={20} />
    </a>
  </div>
</section>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    background-color: #F5F7FF;
    padding-top: 130px;
    border-radius: 0 0 40px 40px;
  }

  .hero-container {
    max-width: 1224px;
    width: 100%;
    margin: 0 auto;
    padding: 60px 24px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: 480px;
    height: auto;
    gap: 40px;
  }

  .hero-content {
    flex: 1;
    max-width: 100%;
  }

  .hero-tagline {
    font-size: 24px;
    font-style: italic;
    color: #8EA7DF;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .hero-title {
    font-size: 42px;
    font-weight: 700;
    line-height: 140%;
    color: #435888;
    margin-bottom: 20px;
    letter-spacing: 0;
  }

  .hero-title .highlight {
    color: #6989D4;
    position: relative;
    display: inline-block;
  }

  .hero-title .highlight .subline-svg {
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: auto;
  }

  .hero-subtitle {
    font-size: 24px;
    font-weight: 500;
    line-height: 1.6;
    color: #504C54;
    margin-bottom: 28px;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 24px;
    background-color: #6989D4;
    color: #FFFFFE;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-primary:hover {
    background-color: #5878c3;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(105, 137, 212, 0.3);
  }

  .hero-image {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width: 480px;
    height: 480px;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Clients Section */
  .clients-section {
    text-align: center;
    padding: 50px 24px 60px;
    background-color: #F5F7FF;
    border-radius: 0 0 40px 40px;
  }

  .clients-text {
    font-size: 20px;
    color: #504C54;
    margin-bottom: 28px;
    font-weight: 700;
  }

  .clients-text .highlight-link {
    color: #6989D4;
    font-weight: 700;
    text-decoration: none;
    position: relative;
    display: inline;
  }

  .clients-text .highlight-link .subline-svg {
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 100%;
    height: auto;
  }

  /* Logo Carousel */
  .logos-carousel {
    overflow: hidden;
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  .logos-track {
    display: flex;
    gap: 40px;
    align-items: center;
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  .logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50px;
    min-width: 100px;
    opacity: 1;
    transition: all 0.3s ease;
  }

  .logo-item:hover {
    opacity: 0.8;
  }

  .logo-item img {
    max-height: 100%;
    max-width: 120px;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .logos-carousel:hover .logos-track {
    animation-play-state: paused;
  }

  /* Scroll Indicator - Pill shape */
  .scroll-indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    margin-top: 36px;
    border: 1.5px solid #D1D5DB;
    border-radius: 24px;
    color: #9CA3AF;
    transition: all 0.3s ease;
    background: white;
  }

  .scroll-indicator:hover {
    border-color: #4A5FC1;
    color: #4A5FC1;
  }

  /* ===== Tablet Responsive ===== */
  @media (max-width: 1024px) {
    .hero-container {
      flex-direction: row;
      gap: 24px;
      padding: 40px 24px 30px;
      height: auto;
      min-height: auto;
      align-items: flex-start;
    }

    .hero-content {
      text-align: left;
    }

    .hero-title {
      font-size: 28px;
    }

    .hero-subtitle {
      font-size: 16px;
    }

    .hero-subtitle br {
      display: none;
    }

    .hero-title br {
      display: none;
    }

    .hero-image {
      width: 280px;
      height: auto;
      flex-shrink: 0;
    }

    .hero-image img {
      max-height: 280px;
      width: 100%;
    }

    .logo-item {
      min-width: 70px;
    }

    .logos-track {
      gap: 32px;
    }
  }

  /* ===== Mobile Responsive ===== */
  @media (max-width: 768px) {
    .hero {
      padding-top: 67px;
    }

    .hero-container {
      flex-direction: column;
      gap: 32px;
      padding: 32px 20px 24px;
      text-align: center;
      height: auto;
    }

    .hero-content {
      max-width: 100%;
      order: 2;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-content br {
      display: none;
    }

    .hero-image {
      order: 1;
      justify-content: center;
      width: 100%;
      height: auto;
    }

    .hero-image img {
      max-width: 180px;
      max-height: 180px;
    }

    .hero-tagline {
      font-size: 15px;
    }

    .hero-title {
      font-size: 26px;
    }

    .hero-subtitle {
      font-size: 15px;
    }

    .hero-subtitle br {
      display: none;
    }

    .btn-primary {
      width: 100%;
    }

    .clients-section {
      padding: 32px 20px 40px;
    }

    .clients-text {
      font-size: 14px;
    }

    .logo-item {
      min-width: 60px;
      height: 24px;
    }

    .logo-item img {
      max-width: 70px;
    }

    .logos-track {
      gap: 24px;
      animation-duration: 20s;
    }

    .scroll-indicator {
      width: 40px;
      height: 40px;
      margin-top: 28px;
    }
  }

  /* ===== Small Mobile ===== */
  @media (max-width: 480px) {
    .hero-title {
      font-size: 24px;
    }

    .hero-subtitle {
      font-size: 14px;
    }

    .hero-image img {
      max-width: 240px;
    }
  }
</style>
